            value="<%= isiData?.nama %>" required placeholder="Nama">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="Email" class="form-control" id="Email" aria-describedby="Email" name="email" placeholder="Email"
