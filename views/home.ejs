<% if (typeof msg !== 'undefined' ) { %>
<p><%= msg %></p>
<% } %>


<h1 class="text-center">Topik Terkini</h1>
<% if (posts.length < 1 ) { %>
<p>Forum Data Tidak ada</p>
<% } else {%>
<% for(const post of posts) { %>
<div class="card w-50 mt-4">
    <div class="card-body">
        <h5 class="card-title">
            <%= post.title_post %>
        </h5>
        <p><%= post.content.substring(0, 50) %>... </p>
        <% if(post.image === 'null' || post.image === 'undefined') { %>

        <% }else { %>
        <img src="../image/<%= post.image %>" class="img-fluid" alt="Responsive image" alt="...">
        <% } %>
        <p class="card-text"><small class="text-muted"> <%= post.username %>
                <%= moment(post.date).format('DD-MM-YYYY') %>,
                <%= moment(post.time).format('HH:MM') %></small></p>



    </div>

    <a href="/category/<%= post.title_category %>/post/<%= post.title_post %>" class="stretched-link"></a>
</div>
<% } %>
<% } %>