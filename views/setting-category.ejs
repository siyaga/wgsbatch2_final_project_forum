<!-- mainbody -->

<h1>Categorys List : </h1>
<a href="/category/add" class="btn btn-primary mt-3 mb-3"><i class="bi bi-plus-square"></i> Add Kategori
    Baru</a>

<% if (msg.length !== 0) { %>
<div class="alert alert-success" role="alert">
    <%= msg %>
</div>
<% } %>
<!-- Membuat tabel menggunakan bootstrap -->
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Judul Kategori</th>
            <th scope="col">Date</th>
            <th scope="col text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% if (categorys.length < 1 ) { %>
            <p>Categorys Data empty</p>
            <% } else {%>
            <!-- Membuat nomor angka variable let i -->
            <% let i = 1; %>
            <% for(const category of categorys) { %>
        <tr>
            <!-- Memanggil dan nomor -->
            <th><%= i++ %> </th>
            <td><%= category.title_category %> </td>
            <td><%= category.date %> </td>

            <td>
                <!-- Menambahkan update dan delete  -->
                <a href="/category/<%= category.id %>" class="btn btn-primary badge mt-1 "><i
                        class="bi bi-card-heading"></i>
                    View</a>
                <br />
                <a href="/category/edit/<%= category.id_category %>" class="btn btn-warning ml-1 badge mt-2"><i
                        class="bi bi-pencil-square"></i>
                    Update</a>
                <br />
                <a href="/category/delete/<%= category.id_category %>" class="btn btn-danger badge mt-2"
                    onclick="return confirm('yakin Anda Menghapus <%= category.sub_category %>?')"><i
                        class="bi bi-trash-fill"></i>
                    Delete</a>
            </td>
        </tr>
        <% } %>
        <% } %>
        </tr>
        <tr>

        </tr>
    </tbody>
</table>