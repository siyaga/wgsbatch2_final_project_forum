<!-- mainbody -->

<h1>Kategori List : </h1>
<a href="/setting-category/add" class="btn btn-primary mt-3 mb-3"><i class="bi bi-plus-square"></i> Add Kategori
    Baru</a>

<% if (msg.length !== 0) { %>
<div class="alert alert-success" role="alert">
    <%= msg %>
</div>
<% } %>
<!-- Membuat tabel menggunakan bootstrap -->
<table class="table table-sm" style="background-color: #fff;">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Judul Kategori</th>
            <th scope="col">Tanggal Pembuatan</th>
            <th scope="col text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% if (categorys.length < 1 ) { %>
            <p>Kategori Data Tidak ada</p>
            <% } else {%>
            <!-- Membuat nomor angka variable let i -->
            <% let i = 1; %>
            <% for(const category of categorys) { %>
        <tr>
            <!-- Memanggil dan nomor -->
            <th><%= i++ %> </th>
            <td><%= category.title_category %> </td>
            <td><%= moment(category.date).format('YYYY-MM-DD') %> <%= moment(category.time).format('HH:MM') %>
            </td>

            <td>
                <!-- Menambahkan update dan delete  -->
                <a href="/setting-category/edit/<%= category.title_category %>"
                    class="btn btn-warning ml-1 badge mt-2"><i class="bi bi-pencil-square"></i>
                    Update</a>
                <br />
                <a href="/setting-category/delete/<%= category.title_category %>" class="btn btn-danger badge mt-2"
                    onclick="return confirm('yakin Anda Menghapus <%= category.title_category %>?')"><i
                        class="bi bi-trash-fill"></i>
                    Delete</a>
            </td>
        </tr>
        <% } %>
        <% } %>
        </tr>
        <tr>

        </tr>
    </tbody>
</table>