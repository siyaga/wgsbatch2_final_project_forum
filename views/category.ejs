<% if (!categorys) { %>
Kategori tidak ada.<br>
<% } else { %>
<div class="card">
    <div class="card-header">
        <h1>Kategori</h1>
    </div>

    <div class="card-body">
        <% for(const category of categorys) { %>
        <div class="card" style="width: 90%; text-align: center;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h3><%= capitalize.words(category.title_category)%></h3>
                </li>
            </ul>
            <a href="/category/<%= category.title_category %>" class="stretched-link"></a>
        </div>
        <% } %>
    </div>

</div>
<% } %>